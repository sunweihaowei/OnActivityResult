<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_a">

    <Button
        android:id="@+id/to_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="toB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/to_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="toC"
        app:layout_constraintEnd_toEndOf="@+id/to_b"
        app:layout_constraintStart_toStartOf="@+id/to_b"
        app:layout_constraintTop_toBottomOf="@+id/to_b" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="hello"
        app:layout_constraintEnd_toEndOf="@+id/to_c"
        app:layout_constraintStart_toStartOf="@+id/to_c"
        app:layout_constraintTop_toBottomOf="@+id/to_c" />

</androidx.constraintlayout.widget.ConstraintLayout>